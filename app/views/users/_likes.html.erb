<% if favorites.any? %>
  <ul class="list-unstyled">
      <% favorites.each do |favorite| %>
        <li class="media">
            
            <div class="media-boy">
                <div>
              <%= favorite.micropost.user.name %>
              <%= favorite.micropost.content %>
            </div>
            <div>
        
                <p><%= link_to 'View profile', user_path(favorite.micropost.user) %></p>
            </div>
               </div>
        </li>
     <% end %>
  </ul>
  
<% end %>